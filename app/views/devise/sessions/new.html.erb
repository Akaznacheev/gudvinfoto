<div class="auth_page">
  <div class="authform">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <h3>ВХОД</h3>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%- if devise_mapping.registerable? %>
              <%= link_to 'РЕГИСТРАЦИЯ', new_registration_path(resource_name), class: 'right'  %>
          <% end -%>
          <%= f.label 'E-MAIL' %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%- if devise_mapping.recoverable? %>
              <%= link_to "ЗАБЫЛИ ПАРОЛЬ?", new_password_path(resource_name), class: 'right' %>
          <% end -%>
          <%= f.label 'ПАРОЛЬ' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> ЗАПОМНИТЬ
              </label>
            </div>
        <% end %>
        <%= f.submit 'ВОЙТИ', :class => 'button right' %>
        <div class="omnibuttons">
          <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to "Войти через ВКОНТАКТЕ", user_vkontakte_omniauth_authorize_path, class: 'button' %><br />
              <% end -%>
          <% end -%>
        </div>
    <% end %>
  </div>
</div>