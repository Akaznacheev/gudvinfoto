<p id="notice"><%= notice %></p>

<div>
  <% @phgallery.images.each_with_index do |image, index| %>
    <div>
      <%= image_tag(image.url, size: "400x300") %>
      <%= link_to "Delete", phgallery_image_path(@phgallery, index), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" } %>
    </div>
  <% end %>
</div>

<%= form_for @phgallery, url: phgallery_images_path(@phgallery), method: :post do |f| %>

    <%= f.label :images %>
    <%= f.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Edit', edit_phgallery_path(@phgallery) %> |
<%= link_to 'Back', phgalleries_path %>
