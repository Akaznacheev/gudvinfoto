<h2>ФОН:</h2>
<div style="">
  <div class="admin_gallery">
    <% @background.images.each_with_index do |image, index| %>
        <div class="imgbox">
          <%= image_tag image.thumb.url%>
          <%= link_to admin_gallery_image_path(@background, index), :class => 'delete', :method => :delete, data: {confirm: 'Вы действительно хотите удалить?'} do %>
            <i class="fa fa-times"></i>
          <% end %>
        </div>
    <% end %>
  </div>
  <div class="add_photo_button">
    <label id="trigger-modal_background">
      <i class="fa fa-plus"></i> ДОБАВИТЬ ФОТОГРАФИИ
    </label>
  </div>
  <div id="screen_background" class="screen"></div>
  <div id="modal_background" class="modal">
    <%= render partial: '/image_upload_modal', locals: {form_for_model: [:admin, @background],
                                                        url: admin_gallery_images_path(@background),
                                                        gallery_type: 'background'} %>
  </div>
</div>
<hr>
<h2>ФОТОГРАФИИ НА ГЛАВНОЙ СТРАНИЦЕ:</h2>
<div class="admin_gallery">
  <% @gallery.images.each_with_index do |image, index| %>
      <div class="imgbox">
        <%= image_tag image.thumb.url%>
        <%= link_to admin_gallery_image_path(@gallery, index), :class => 'delete', :method => :delete, data: {confirm: 'Вы действительно хотите удалить?'} do %>
          <i class="fa fa-times"></i>
        <% end %>
      </div>
  <% end %>
</div>
<div class="add_photo_button">
  <label id="trigger-modal_gallery">
    <i class="fa fa-plus"></i> ДОБАВИТЬ ФОТОГРАФИИ
  </label>
</div>
<div id="screen_gallery" class="screen"></div>
<div id="modal_gallery" class="modal">
  <%= render partial: '/image_upload_modal', locals: {form_for_model: [:admin, @gallery],
                                                      url: admin_gallery_images_path(@gallery),
                                                      gallery_type: 'gallery'} %>
</div>