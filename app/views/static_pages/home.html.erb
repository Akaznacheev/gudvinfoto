<% if @gallery.images.present? %>
    <div class="homeslider">
      <% @gallery.images.each do |image| %>
          <div style="background: url('<%= image.url %>') no-repeat center; background-size: cover;">
          </div>
      <% end %>
    </div>
<% end %>
<div class="services">
  <h1>МЫ ПРЕДЛАГАЕМ</h1>
  <%= link_to choose_book_format_path do %>
    <div class="service">
      <div class="service_image">
        <%=image_tag('book.jpg', alt: 'Фото-книги GudvinFoto')%>
      </div>
      <div class="service_about">
        <h2>ФОТОКНИГИ</h2>
        <div>
          <p>
            СОХРАНИТЕ ВАШИ<br>
            ПРЕКРАСНЫЕ ЭМОЦИИ И ВПЕЧАТЛЕНИЯ<br>
            НА ДОЛГУЮ ПАМЯТЬ<br>
            В ФОТОКНИГЕ ОТ <b>GUDVIN</b>
          </p>
        </div>
      </div>
    </div>
  <% end %>
    <div class="service" id="click_holst">
      <div class="service_image">
        <%=image_tag('holst.jpg', alt: 'Холсты GudvinFoto')%>
      </div>
      <div class="service_about">
        <h2>ХОЛСТЫ</h2>
        <div>
          <%= form_for(@holst) do |f| %>
            <div style="text-align: center;">
              <% f.submit 'СОЗДАТЬ ФОТОКНИГУ', :class => 'torton-click-button' %>
            </div>
            <div class="field">
              <%= f.hidden_field :price, :value => 0 %>
              <%= f.hidden_field :user_id, :value => current_or_guest_user.id %>
              <%= f.hidden_field :price_list_id, :value => @price_list.id %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
<div class="testimonials">
</div>
<div class="advantages">
</div>
<div class="trust_us">
  <h1 style="text-align: center;">НАМ ДОВЕРЯЮТ</h1>
  <div class="partnerslider">
    <% @partners.each do |partner| %>
        <div class="partner">
          <% if partner.link.blank? %>
              <%= image_tag partner.attachment.url(:small), alt: partner.name, title: partner.name %>
          <% else %>
              <%= link_to partner.link do %>
                  <%= image_tag partner.attachment.url(:small), alt: partner.name, title: partner.name %>
              <% end %>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
<script>
    $('#click_holst').click(function () {
        $('form').submit();
    });
</script>