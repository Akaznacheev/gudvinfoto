<div class="editorcontainer" style="margin: auto; margin-top: -20px; width: 65%; background-color: none; height: 100%;">

  <h1 style="padding: 1.2% 0; text-align: center; font-size: 50px; font-family: 'PT Serif';"><b>СОЗДАЁМ ФОТОКНИГУ</b></h1>

  <script>
  </script>

  <div style="width: 100%; padding-top:50%;; background-color: white; box-shadow: 0 0 20px rgba(0,0,0,0.5); border: 1px solid black;">
    <div style="width: 36%; padding-top:36%; margin: -43% 7% 7% 7%; background-color: lightgray; border: 1px solid black;">

      <% if @book.bookpages.first.images.blank? %>
      <% else %>
          <%= image_tag @book.bookpages.first.images.first.url, style: "margin-top: - 10px; max-height: 80px; border-radius: 10px;"%>
      <% end %>
    </div>
    <div style="width: 50%; padding-top:50%; margin: -50.2% 0% 0% 50%; background-color: lightgray; border: 1px solid black;">

    </div>
  </div>

  <div style="width: 100%; height: 100px; margin-top: 1%; background-color: white; box-shadow: 0 0 20px rgba(0,0,0,0.5); border: 1px solid black; border-radius: 20px;">
    <div>
      <% @book.phgallery.images.each_with_index do |image, index| %>
          <div id="draggable" class="images ui-widget-content" style="padding: 10px 0 10px 10px; width: 80px; 80px;  display: table-cell; vertical-align: middle; ">
            <%= link_to "Delete", phgallery_image_path(@book.phgallery, index), :style => "margin-top: -80px", :method => :delete, data: { confirm: "Are you sure you want to delete this image?" } %>
            <%= image_tag image.url, style: "margin-top: - 10px; max-height: 80px; border-radius: 10px;"%>
          </div>
      <% end %>
    </div>

    <%= form_for @book.phgallery, url: phgallery_images_path(@book.phgallery), method: :post do |f| %>

        <div class="actions" style="text-align: center">
          <%= f.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
          <%= f.submit 'ДОБАВИТЬ ФОТОГРАФИИ', :style => 'background-color: white; border: 1px solid black; border-radius: 999px; margin: auto;' %>
        </div>

    <% end %>
  </div>

  <%= render 'form' %>
</div>
