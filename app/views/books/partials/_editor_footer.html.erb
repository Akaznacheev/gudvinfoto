<div class="photobox" style=<%= photoboxmargin %>>
  <div class="wrapper2">
    <% @phgallery.images.each_with_index do |image, index| %>
        <div class="imgbox slide">
          <div id='<%= index %>' class="div_1 show-image">
            <%= image_tag image.thumb.url%>
            <% if @book.phgallery.imgchecks.include?(image.url) %>
                <%= icon('check-circle-o', class: 'check_image') %>
            <% end %>
            <%= link_to book_phgallery_image_path(@book, @book.phgallery, index), :class => 'delete' , :method => :delete, data: { confirm: 'Удалить фотографию?' } do %>
                <%= image_tag 'delete.jpg'%>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
<div class="add_photo_button">
      <label id="trigger-modal_phgallery">
        ДОБАВИТЬ ФОТОГРАФИИ
      </label>
</div>
<div id="screen_phgallery" class="screen"></div>
<div id="modal_phgallery" class="modal">
  <%= render partial: '/image_upload_modal', locals: {form_for_model: @phgallery,
                                                      url: book_phgallery_images_url(@book.id, @phgallery.id),
                                                      gallery_type: 'phgallery'} %>
</div>