<div class="book_head">
  <div class="head_left">
    <%= form_for(@book) do |f| %>
        <p class="torton-round-element" style="float: right; margin-right: 1vh;">
          ФОРМАТ:
          <b>
            <% @selectvalues = []  %>
            <% Bookprice.where(:status => "АКТИВЕН").each do |format| %>
                <% @selectvalues << format.format %>
            <% end %>
            <%= select_tag :bookprice, options_for_select(@selectvalues, @book.bookprice.format), :onchange => "this.form.submit();" %>
          </b>
        </p>
    <% end %>
  </div>
  <div class="head_left">
    <p style="float: left;">
      <%= link_to book_path(@book,:razvorot => rzp, :lt => @book.bookpages[0].template, :rt => @book.bookpages[1].template), :method => :get, :class => "torton-click-button", :style => "font-weight: 600;" do %>
        <span >ПРОСМОТР КНИГИ&nbsp;</span><i class="fa fa-search" aria-hidden="true"></i>
      <% end %>
    </p>
  </div>
  <div class="head_center" >
    <h1>СОЗДАЁМ ФОТОКНИГУ</h1>
  </div>
  <div class="head_right" >
    <% if @book.order.status == "Создан" %>
        <p style="float: right;"><%= link_to 'ОФОРМИТЬ ЗАКАЗ', edit_order_path(@book.order), data: { "no-turbolink" => true } , :class => "torton-click-button", :style => "font-weight: 600;" %></p>
    <% end %>
  </div>
  <div class="head_right">
    <p class="torton-round-element" style="float: left; margin-left: 1vh;">СТОИМОСТЬ КНИГИ:<b><%= @book.price %> РУБ</b></p>
  </div>
</div>