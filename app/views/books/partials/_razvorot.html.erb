<div class="book book-razvorot" >
  <div class="leftpage">
    <% style = book_pages[(rzp)*2 - 1].background ? "background: url('/uploads/gallery/images/#{book_pages[(rzp)*2 - 1].gallery.id.to_s}/ineditor_#{File.basename(book_pages[(rzp)*2 - 1].background.to_s)}') center / cover  no-repeat; filter: blur(1px);" : "background-color:#{book_pages[(rzp)*2 - 1].background_color};" %>
    <div id="page_background_<%= book_pages[(rzp)*2 - 1].id %>"  class='page_background' style="<%= style %>" >
    </div>
    <div class="frame_box">
      <%= render partial: 'books/templates/page_temp_' + ltp.to_s, locals: {book_page: book_pages[(rzp)*2 - 1]} %>
    </div>
  </div>
  <div class="rightpage">
    <% style = book_pages[(rzp)*2].background ? "background: url('/uploads/gallery/images/#{book_pages[(rzp)*2].gallery.id.to_s}/ineditor_#{File.basename(book_pages[(rzp)*2].background.to_s)}') center / cover  no-repeat; filter: blur(1px);" : "background-color:#{book_pages[(rzp)*2].background_color};" %>
    <div id="page_background_<%= book_pages[(rzp)*2].id %>"  class='page_background' style="position: relative; <%= style %>" >
    </div>
    <div class="frame_box">
      <%= render partial: 'books/templates/page_temp_' + rtp.to_s, locals: {book_page: book_pages[(rzp)*2]} %>
    </div>
  </div>
</div>