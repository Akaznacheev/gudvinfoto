<div class="book_head">
  <div class="head_left">
    <p>
      <% if @book.order.blank? %>
          <%= link_to edit_book_path(@book,
                                     :razvorot => rzp,
                                     :lt => @book.book_pages[0].template,
                                     :rt => @book.book_pages[1].template),
                      :class => 'round_button' do %>
            <i class="fa fa-edit"></i> РЕДАКТИРОВАТЬ КНИГУ
          <% end %>
    <% end %>
    </p>
  </div>
  <div class="head_left">
  </div>
  <div class="head_center" >
    <h1>ПРОСМОТР КНИГИ</h1>
  </div>
  <div class="head_right">
    <p class="round_element_with_data">
      СТОИМОСТЬ КНИГИ:<b><%= @book.price %> <i class="fa fa-ruble"></i></b>
    </p>
  </div>
  <% if @book.order.blank? %>
    <div class="head_right" >
        <%= link_to new_order_path(book: @book), data: { 'no-turbolink' => true } , :class => 'round_button' do %>
          <span >ОФОРМИТЬ ЗАКАЗ&nbsp;</span><i class="fa fa-shopping-bag" aria-hidden="true"></i>
        <% end %>
    </div>
  <% end %>
</div>