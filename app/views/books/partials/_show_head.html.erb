<div class="book_head">
  <div class="head_left">
  </div>
  <div class="head_left">
    <p style="float: left;">
      <% if @book.order.blank? %>
          <%= link_to 'РЕДАКТИРОВАТЬ КНИГУ', edit_book_path(@book,:razvorot => rzp, :lt => @book.bookpages[0].template, :rt => @book.bookpages[1].template), :class => "torton-click-button" %>
      <% end %>
    </p>
  </div>
  <div class="head_center" >
    <h1>ПРОСМОТР ФОТОКНИГИ</h1>
  </div>
  <% if @book.order.blank? %>
    <div class="head_right" >
      <p style="float: right;"><%= link_to 'ОФОРМИТЬ ЗАКАЗ', new_order_path(@book), data: { "no-turbolink" => true } , :class => "torton-click-button", :style => "font-weight: 600;" %></p>
    </div>
    <div class="head_right">
      <p class="torton-round-element" style="float: left; margin-left: 1vh;">СТОИМОСТЬ КНИГИ:<b><%= @book.price %> РУБ</b></p>
    </div>
  <% end %>
</div>