<div class="book_head">
  <div class="head_left">
    <p>
      <% if @book.order.blank? %>
          <%= link_to 'РЕДАКТИРОВАТЬ КНИГУ',
                      edit_book_path(@book,
                                     :razvorot => rzp,
                                     :lt => @book.bookpages[0].template,
                                     :rt => @book.bookpages[1].template),
                      :class => 'round_button' %>
      <% end %>
    </p>
  </div>
  <div class="head_left">
  </div>
  <div class="head_center" >
    <h1>ПРОСМОТР КНИГИ</h1>
  </div>
  <div class="head_right">
    <p class="round_element_with_data">
      СТОИМОСТЬ КНИГИ:<b><%= @book.price %> РУБ</b>
    </p>
  </div>
  <% if @book.order.blank? %>
    <div class="head_right" >
      <p>
        <%= link_to 'ОФОРМИТЬ ЗАКАЗ',
                    new_order_path(book: @book),
                    data: { 'no-turbolink' => true },
                    :class => 'round_button' %>
      </p>
    </div>
  <% end %>
</div>