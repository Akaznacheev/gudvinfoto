<% @num = 1 %>
<% if @book.bookpages[@id].images.blank? %>
    <div id="<%= @book.bookpages[@id].id %>, <%= @num %>" class="bgmove div_2" style="width: 60%; height: 100%; margin: 0 20%;">
      <%= render 'books/templates/rotate' %>
    </div>
<% else %>
    <div id="<%= @book.bookpages[@id].id %>, <%= @num %>" class="bgmove div_2" style="width: 60%; height: 100%; margin: 0 20%; background: url('<%= @book.bookpages[@id].images[@num-1].ineditor.url %>') <%= @book.bookpages[@id].positions[@num-1] %> / cover  no-repeat;">
      <%= render 'books/templates/rotate' %>
    </div>
<% end %>