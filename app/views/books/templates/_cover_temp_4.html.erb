<%= render partial: 'books/templates/frame', locals: {bookpage: bookpage, num: 0, addclass: '', style: 'width: 100%; padding-top: 70%; margin: 0;'} %>
<% tempfsize = '6' %>
<% if book.fontsize.present? %>
    <% if book.fontsize.to_i > tempfsize.to_i %>
        <% currentsize = tempfsize %>
    <% else %>
        <% currentsize = book.fontsize %>
    <% end %>
<% else %>
    <% currentsize = tempfsize %>
<% end %>

<% if controller.controller_name == "orders" %>
    <div class="col-xs-6" style="position: relative; text-align: center; height: 7.5vh;width: 100%;">
      <div style="color: <%= book.fontcolor %>; position: relative; top: 50%; transform: translateY(-50%); font-size: <%= (currentsize.to_i / 2.0).to_s %>vh; font-family: <%= book.fontfamily %>; ">
        <%= book.name %>
      </div>
    </div>
<% else %>
    <% if controller.action_name == "edit" %>
    <div id="book_name" style="height: 15vh; width: 50vh; background:none; text-align: center; display:table-cell; vertical-align:middle;">
      <div id="covertext" class="covertext pagetext" style="color: <%= book.fontcolor %>; font-size: <%= currentsize %>vh; font-family: <%= book.fontfamily %>;">
        <%= book.name %>
      </div>
    </div>
    <% else %>
        <% if controller.action_name == "index" %>
            <div style="position: relative; text-align: center; height: 7.5vh;width: 100%;">
              <div style="color: <%= book.fontcolor %>; position: relative; top: 50%; transform: translateY(-50%); font-size: <%= (currentsize.to_i / 2.0).to_s %>vh; font-family: <%= book.fontfamily %>; ">
                <%= book.name %>
              </div>
            </div>
        <% else %>
            <div style="position: relative; text-align: center; width: 100%; height: 15vh;">
              <div style="color: <%= book.fontcolor %>; position: relative; top: 50%; transform: translateY(-50%); font-size: <%= currentsize %>vh; font-family: <%= book.fontfamily %>; ">
                <%= book.name %>
              </div>
            </div>
        <% end %>
    <% end %>
<% end %>