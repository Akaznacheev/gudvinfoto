<div class="container" style="width: 100%; margin: 20% 0;">
  <div class="row">
    <% if @book.bookpages[@id].images[0].blank? %>
        <div id="<%= @book.bookpages[@id].id %>, 1" class="col-xs-6 div_2"
             style="width: 49.7%; padding-top: 29.5%; margin: 0 0.3% 0.3% 0;">
        </div>
    <% else %>
        <% @num = 1 %>
        <div id="<%= @book.bookpages[@id].id %>, <%= @num %>" class="bgmove col-xs-6 div_2"
             style="width: 49.7%; padding-top: 29.5%; margin: 0 0.3% 0.3% 0; background: url('<%= @book.bookpages[@id].images[@num-1].url %>') <%= @book.bookpages[@id].positions[0] %> / cover  no-repeat;">
          <%= render 'books/templates/rotate' %>
        </div>
    <% end %>
    <% if @book.bookpages[@id].images[1].blank? %>
        <div id="<%= @book.bookpages[@id].id %>, 2" class="col-xs-6 div_2"
             style="width: 49.7%; padding-top: 29.5%; margin: 0 0 0.3% 0.3%;">
        </div>
    <% else %>
        <% @num = 2 %>
        <div id="<%= @book.bookpages[@id].id %>, <%= @num %>" class="bgmove col-xs-6 div_2"
             style="width: 49.7%; padding-top: 29.5%; margin: 0 0 0.3% 0.3%; background: url('<%= @book.bookpages[@id].images[@num-1].url %>') <%= @book.bookpages[@id].positions[@num-1] %> / cover  no-repeat;">
          <%= render 'books/templates/rotate' %>
        </div>
    <% end %>
  </div>
  <div class="row">
    <% if @book.bookpages[@id].images[2].blank? %>
        <div id="<%= @book.bookpages[@id].id %>, 3" class="col-xs-6 div_2"
             style="width: 49.7%; padding-top: 29.5%; margin: 0.3% 0.3% 0 0;">
        </div>
    <% else %>
        <% @num = 3 %>
        <div id="<%= @book.bookpages[@id].id %>, <%= @num %>" class="bgmove col-xs-6 div_2"
             style="width: 49.7%; padding-top: 29.5%; margin: 0.3% 0.3% 0 0; background: url('<%= @book.bookpages[@id].images[@num-1].url %>') <%= @book.bookpages[@id].positions[@num-1] %> / cover  no-repeat;">
          <%= render 'books/templates/rotate' %>
        </div>
    <% end %>
    <% if @book.bookpages[@id].images[3].blank? %>
        <div id="<%= @book.bookpages[@id].id %>, 4" class="col-xs-6 div_2"
             style="width: 49.7%; padding-top: 29.5%; margin: 0.3% 0 0 0.3%;">
        </div>
    <% else %>
        <% @num = 4 %>
        <div id="<%= @book.bookpages[@id].id %>, <%= @num %>" class="bgmove col-xs-6 div_2"
             style="width: 49.7%; padding-top: 29.5%; margin: 0.3% 0 0 0.3%; background: url('<%= @book.bookpages[@id].images[@num-1].url %>') <%= @book.bookpages[@id].positions[@num-1] %> / cover  no-repeat;">
          <%= render 'books/templates/rotate' %>
        </div>
    <% end %>
  </div>
</div>