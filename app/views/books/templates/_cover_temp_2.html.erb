<div class="container" style="width:100%;height: 50%;">
  <div class="row">
    <div id="<%= @book.bookpages[@id].id %>, 1" class="col-xs-6">
      <div class="row">
        <% @num = 1 %>
        <% if @book.bookpages[@id].images[@num-1].blank? %>
            <div id="<%= @book.bookpages[@id].id %>, <%= @num %>" class="bgmove col-xs-12 div_2" style="width: 90%; padding-top: 90%; margin: 55% 5%;">
              <%= render 'books/templates/rotate' %>
            </div>
        <% else %>
            <div id="<%= @book.bookpages[@id].id %>, <%= @num %>" class="bgmove col-xs-12 div_2" style="width: 90%; padding-top: 90%; margin: 55% 5%; background: url('<%= @book.bookpages[@id].images[@num-1].ineditor.url %>') <%= @book.bookpages[@id].positions[@num-1] %> / cover  no-repeat;">
              <%= render 'books/templates/rotate' %>
            </div>
        <% end %>
      </div>
    </div>
    <% @tempfsize = "3.5" %>
    <% if @book.fontsize.present? %>
        <% if @book.fontsize.to_i > @tempfsize.to_i %>
            <% @currentsize = @tempfsize %>
        <% else %>
            <% @currentsize = @book.fontsize %>
        <% end %>
    <% else %>
        <% @currentsize = @tempfsize %>
    <% end %>
    <% if controller.controller_name == "orders" %>
        <div class="col-xs-6" style="position: relative; text-align: center; height: 25vh;">
          <div style="position: relative; top: 50%; color: <%= @book.fontcolor %>; transform: translateY(-50%); font-size: <%= (@currentsize.to_i / 2.0).to_s %>vh; font-family: <%= @book.fontfamily %>; ">
            <%= @book.name %>
          </div>
        </div>
    <% else %>
        <% if controller.action_name == "edit" %>
            <%= form_for(@book, :html => { :style =>"width: 25vh; height: 50vh; background:none; text-align: center; display:table-cell; vertical-align:middle;"}) do |f| %>

                <%= select_tag 'size', options_for_select(['0.7','1','1.2','1.5','2','2.4','3','3.5'], @currentsize) %>
                <%= select_tag 'fs', options_for_select(['Arial','Verdana','Impact','PT Sans','Comic Sans MS'], @book.fontfamily) %>
                <div id="textarea">
                  <textarea id="covertext" data-autoresize rows="1" class="changeMe" style="color: <%= @book.fontcolor %>;"><%= @book.name %></textarea>
                </div>
                <div id='click' class='<%= @book.id %>' style="color: <%= @book.fontcolor %>; cursor: pointer;">сохранить</div>
            <% end %>
        <% else %>
            <% if controller.action_name == "index" %>
                <div class="col-xs-6" style="position: relative; text-align: center; height: 25vh;">
                  <div style="color: <%= @book.fontcolor %>; position: relative; top: 50%; transform: translateY(-50%); font-size: <%= (@currentsize.to_i / 2.0).to_s %>vh; font-family: <%= @book.fontfamily %>; ">
                    <%= @book.name %>
                  </div>
                </div>
            <% else %>
                <div style="position: relative; text-align: center; height: 50vh;">
                  <div style="color: <%= @book.fontcolor %>; position: relative; top: 50%; transform: translateY(-50%); font-size: <%= @currentsize %>vh; font-family: <%= @book.fontfamily %>;">
                    <%= @book.name %>
                  </div>
                </div>
            <% end %>
        <% end %>
    <% end %>
  </div>
</div>