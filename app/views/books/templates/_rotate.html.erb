<% if controller.controller_name == 'books' and controller.action_name == 'edit' %>
    <%= link_to book_page_path(book_page.id, :rotate => 90, :image_num => num), style: 'left: 0;', :class => 'darker', remote: true, :method=> :put do %>
      <i class="fa fa-rotate-right" style='font-size: 2vh; color:#777777; background-color: white;'></i>
    <% end %>
    <%= link_to book_page_path(book_page.id, :rotate => -90, :image_num => num), style: 'right: 0;', :class => 'darker', remote: true, :method=> :put do %>
      <i class="fa fa-rotate-left" style='font-size: 2vh; color:#777777; background-color: white;'></i>
    <% end %>
<% end %>