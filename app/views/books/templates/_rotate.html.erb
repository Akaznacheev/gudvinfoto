<% if controller.controller_name == 'books' and controller.action_name == 'edit' %>
    <%= link_to bookpage_path(bookpage.id, :rotate => 90, :image_num => num), style: 'left: 0;', :class => 'darker', remote: true, :method=> :put do %>
        <%= image_tag 'rightrotate.jpg', alt: '', style: 'width:5%; min-height: 15px; min-width: 15px; margin: 0; padding:0; float: left;' %>
    <% end %>
    <%= link_to bookpage_path(bookpage.id, :rotate => -90, :image_num => num), style: 'right: 0;', :class => 'darker', remote: true, :method=> :put do %>
        <%= image_tag 'leftrotate.jpg', alt: '', style: 'width:5%; min-height: 15px; min-width: 15px; margin: 0; padding:0; float: right;' %>
    <% end %>
<% end %>