<% if @book.bookpages[@id].images.blank? %>
    <div id="<%= @book.bookpages[@id].id %>" class="div_2" style="background-position: center; background-size: cover; width: 60%; padding-top: 100%; margin: 20%; background-color: lightgray; border: 1px solid black;">
    </div>
<% else %>
    <div id="<%= @book.bookpages[@id].id %>" class="div_2" style="width: 60%; padding-top: 90%; margin: 5%; background: url('<%= @book.bookpages[@id].images[0].url %>') no-repeat center; background-size: cover; border: 1px solid black;">
    </div>
<% end %>