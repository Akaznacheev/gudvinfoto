<% if @book.bookpages[@id].images.blank? %>
    <div id="<%= @book.bookpages[@id].id %>, 1" class="div_2" style="width: 80%; padding-top: 80%; margin: 10%;">
    </div>
<% else %>
    <div id="<%= @book.bookpages[@id].id %>, 1" class="div_2" style="width: 80%; padding-top: 80%; margin: 10%; background: url('<%= @book.bookpages[@id].images[0].url %>') no-repeat center; background-size: cover;">
    </div>
<% end %>