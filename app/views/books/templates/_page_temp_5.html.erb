<div class="container" style="width: 90%; margin: 5% 5%;">
  <div class="row">
        <div id="<%= @book.bookpages[@id].id %>, 1" class="col-xs-6">
          <div class="row">
            <% if @book.bookpages[@id].images[0].blank? %>
                <div id="<%= @book.bookpages[@id].id %>, 1" class="col-xs-12 div_2"
                     style="background-size: cover; width: 99.75%; padding-top: 65.1%; margin: 0 0.5% 0.5% 0; background-color: lightgray; border: 1px solid black;"></div>
            <% else %>
                <div id="<%= @book.bookpages[@id].id %>, 1" class="col-xs-12 div_2"
                     style="width: 99.75%; padding-top: 65.1%; margin: 0 0.5% 0.5% 0; background: url('<%= @book.bookpages[@id].images[0].url %>') no-repeat center; background-size: cover; border: 1px solid black;"></div>
            <% end %>
          </div>
          <div class="row">
            <% if @book.bookpages[@id].images[0].blank? %>
                <div id="<%= @book.bookpages[@id].id %>, 2" class="col-xs-12 div_2"
                     style="background-size: cover; width: 99.75%; padding-top: 65.1%; margin: 0.5% 0.5% 0.5% 0; background-color: lightgray; border: 1px solid black;"></div>
            <% else %>
                <div id="<%= @book.bookpages[@id].id %>, 2" class="col-xs-12 div_2"
                     style="width: 99.75%; padding-top: 65.1%; margin: 0.5% 0.5% 0.5% 0; background: url('<%= @book.bookpages[@id].images[1].url %>') no-repeat center; background-size: cover; border: 1px solid black;"></div>
            <% end %>
          </div>
          <div class="row">
            <% if @book.bookpages[@id].images[0].blank? %>
                <div id="<%= @book.bookpages[@id].id %>, 3" class="col-xs-12 div_2"
                     style="background-size: cover; width: 99.75%; padding-top: 65.1%; margin: 0.5% 0.5% 0 0; background-color: lightgray; border: 1px solid black;"></div>
            <% else %>
                <div id="<%= @book.bookpages[@id].id %>, 3" class="col-xs-12 div_2"
                     style="width: 99.57%; padding-top: 65.1%; margin: 0.5% 0.5% 0 0; background: url('<%= @book.bookpages[@id].images[2].url %>') no-repeat center; background-size: cover; border: 1px solid black;"></div>
            <% end %>
          </div>
        </div>
    <% if @book.bookpages[@id].images[1].blank? %>
        <div id="<%= @book.bookpages[@id].id %>, 4" class="col-xs-6 div_2"
             style="background-size: cover; width: 49.75%; padding-top: 99.5%; margin: 0 0 0 0.25%; background-color: lightgray; border: 1px solid black;"></div>
    <% else %>
        <div id="<%= @book.bookpages[@id].id %>, 4" class="col-xs-6 div_2"
             style="width: 49.75%; padding-top: 99.5%; margin: 0 0 0 0.25%; background: url('<%= @book.bookpages[@id].images[3].url %>') no-repeat center; background-size: cover; border: 1px solid black;"></div>
    <% end %>
  </div>
</div>