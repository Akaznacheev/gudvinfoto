<div class="editorcontainer">

  <h1><b>МОИ КНИГИ</b></h1>
  <div>
    <div style="display: inline-block;">
      <% @books.each_with_index do |book, index| %>
          <div style="display: inline-block;">
            <%= link_to book_path(book, :razvorot => 0, :rt => book.bookpages[0].template) do %>
                <div id='<%= index %>' style="width: 15vw; height:15vw; padding: 1vw;margin: 0.5vw; background: white; border: 1px solid black; box-shadow: 0 0 20px rgba(0,0,0,0.5);">
                  <%= book.name %> №<%= index+1 %>
                </div>
            <% end %>
          </div>
      <% end %>
      <%= link_to 'books#create' do %>
          <div style="width: 15vw; height:15vw; padding: 1vw;margin: 0.5vw; background: white; border: 1px solid black; box-shadow: 0 0 20px rgba(0,0,0,0.5);">
            <%= 'New Book' %>
          </div>
      <% end %>
    </div>
  </div>
</div>