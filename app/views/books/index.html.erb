
    <div class="books_page">
      <h1>МОИ ФОТОКНИГИ:</h1>
      <div class="books">
        <% @books.each do |book| %>
            <div class="flipper choosen_book">
              <div class="flip-front">
                <%= render partial: 'books/partials/index_book_cover',
                           locals: {book: book, book_page: book.book_pages.first } %>
              </div>
              <div class="flip-back">
                <%= render partial: 'books/partials/index_about_book',
                           locals: {book: book } %>
              </div>
            </div>
        <% end %>
      </div>
      <div class="will_paginate">
        <%= bs_will_paginate @books %>
      </div>
      <div class="submitbutton">
        <%= link_to 'НОВАЯ ФОТОКНИГА', choose_book_format_path, :class => 'round_button' %>
        <% if current_user.try(:vip?) || current_user.try(:admin?) %>
          <% link_to 'CКАЧАТЬ СЕТКИ', '/downloads/_setki_psd_2016_new.rar', :class => 'round_button' %>
        <% end %>
      </div>
    </div>