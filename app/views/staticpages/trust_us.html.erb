<div class="page">
  <div class="page_box">
    <div class="content">
      <div class="delivery_page">
        <h1>НАМ ДОВЕРЯЮТ</h1>
        <% @partners.each do |partner| %>
            <div class="partner">
              <div class="imgbox">
                <% if partner.link.blank? %>
                    <%= image_tag partner.attachment.url, alt: partner.name, title: partner.name %><br>
                <% else %>
                    <%= link_to partner.link do %>
                        <%= image_tag partner.attachment.url, alt: partner.name, title: partner.name %><br>
                    <% end %>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>