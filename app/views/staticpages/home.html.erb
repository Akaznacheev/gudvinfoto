<div class="page">
  <% render 'staticpages/homepage/pageside_left' %>
  <% render 'staticpages/homepage/pageside_right' %>
  <div class="slider">
    <div class="homeslider">
      <% if @phgallery.images.count > 1 %>
          <ul class="bxslider">
            <% @phgallery.images.each do |image| %>
                <li>
                  <div style="background: url('<%= image.url %>') no-repeat center; background-size: cover;">
                  </div>
                </li>
            <% end %>
          </ul>
      <% else %>
          <% if @phgallery.images.count > 0 %>
              <div style="background: url('<%= @phgallery.images.first.url %>') no-repeat center; background-size: cover; height: 100%;">
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="services">
    <div class="service">
      <div class="service_image">
        <%=image_tag("book.jpg", alt: "Фото-книги GudvinFoto")%>
      </div>
      <div class="service_about">
        <h2>ФОТОКНИГА</h2>
        <div>
          <p>
            СОХРАНИТЕ ВАШИ<br>
            ПРЕКРАСНЫЕ ЭМОЦИИ И ВПЕЧАТЛЕНИЯ<br>
            НА ДОЛГУЮ ПАМЯТЬ<br>
            В ФОТОКНИГЕ ОТ <b>GUDVIN</b>
          </p>
        </div>
        <%= form_for(@book) do |f| %>
            <div style="text-align: center;">
              <% f.submit 'СОБЕРИ INSTABOOK', :class => 'torton-click-button' %>
              <%= f.submit 'СОЗДАТЬ ФОТОКНИГУ', :class => 'torton-click-button' %>
            </div>
            <div class="field">
              <%= f.hidden_field :price, :value => 0 %>
            </div>
        <% end %>
      </div>
    </div>
    <div class="service">
      <div class="service_image">
        <%=image_tag("holst.jpg", alt: "Холсты GudvinFoto")%>
      </div>
      <div class="service_about">
        <h2>ХОЛСТЫ</h2>
        <div>
          <p>
            В РАЗРАБОТКЕ
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="adantages">

  </div>
  <div class="map">
    <a href="https://yandex.ru/maps/?um=constructor%3A03b038b692576ab623216b5b1ca5917e70fe3bfe17ff2439fa01fc5a515024e9&amp;source=constructorStatic" target="_blank">
      <%=image_tag('map.png', alt: 'Адрес GudvinFoto. г.Казань, ул. Короленко, д. 35а', title: 'Нажмите чтобы, найти GudvinFoto на Яндекс картах.')%>
    </a>
  </div>
</div>