@import 'variables';
@import 'mixins';
.container {
  background-color: $background-color;
}
//HomeSlider
.homeslider {
  div.bx-wrapper {
    width: 1280px;
    height: 400px;
    overflow-x: hidden;
    overflow-y: hidden;
    margin: 0;
    border: none;
    @include pageside-box-shadow;
    li {
      height: 400px;
      div {
        width:100%;
        height:100%;
        background-size: cover;
      }
    }
    .bx-controls-direction {
      display: none;
    }
    .bx-pager {
      a {
        margin-top: -50px;
        &:hover {
          background-color: $primary-color;
        }
      }
      a.active {
        background-color: $primary-color;
        border-radius: $default-border-radius;
      }
    }
  }
}

//Services
.services {
  width:100%;
  text-align: center;
  margin-top: 36px;
  .service {
    display: inline-block;
    width: 560px;
    height: 280px;
    margin: 0 16px 36px 16px;
    border: $default-border;
    border-radius: 5px;
    .service_image {
      width: 50%;
      float: left;
      img {
        width: 100%;
        height: 100%;
        border-radius: 8px 0 0 8px;
      }
    }
    .service_about {
      width: 50%;
      float: right;
      @include top-transform(50%);
    }
  }
}

